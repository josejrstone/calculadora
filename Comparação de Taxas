            { c: {i: 'fa-pizza-slice', n: 'Pizza'}, i: {i: 'fa-cheese', n: 'Queijo'} },
            { c: {i: 'fa-ice-cream', n: 'Sorvete'}, i: {i: 'fa-cookie', n: 'Cookie'} },
            { c: {i: 'fa-carrot', n: 'Cenoura'}, i: {i: 'fa-pepper-hot', n: 'Pimenta'} },
            { c: {i: 'fa-mug-hot', n: 'Café'}, i: {i: 'fa-wine-glass', n: 'Vinho'} },
            { c: {i: 'fa-bread-slice', n: 'Pão'}, i: {i: 'fa-cake-candles', n: 'Bolo'} },

            // Transporte
            { c: {i: 'fa-car', n: 'Carro'}, i: {i: 'fa-bus', n: 'Ônibus'} },
            { c: {i: 'fa-plane', n: 'Avião'}, i: {i: 'fa-helicopter', n: 'Helicóptero'} },
            { c: {i: 'fa-bicycle', n: 'Bicicleta'}, i: {i: 'fa-motorcycle', n: 'Moto'} },
            { c: {i: 'fa-train', n: 'Trem'}, i: {i: 'fa-train-subway', n: 'Metrô'} },
            { c: {i: 'fa-ship', n: 'Navio'}, i: {i: 'fa-sailboat', n: 'Barco a Vela'} },
            
            // Objetos / Casa
            { c: {i: 'fa-key', n: 'Chave'}, i: {i: 'fa-lock', n: 'Cadeado'} },
            { c: {i: 'fa-mobile', n: 'Celular'}, i: {i: 'fa-tablet', n: 'Tablet'} },
            { c: {i: 'fa-pen', n: 'Caneta'}, i: {i: 'fa-pencil', n: 'Lápis'} },
            { c: {i: 'fa-book', n: 'Livro'}, i: {i: 'fa-newspaper', n: 'Jornal'} },
            { c: {i: 'fa-shirt', n: 'Camisa'}, i: {i: 'fa-socks', n: 'Meia'} },
            { c: {i: 'fa-couch', n: 'Sofá'}, i: {i: 'fa-chair', n: 'Cadeira'} },
            { c: {i: 'fa-bed', n: 'Cama'}, i: {i: 'fa-mattress-pillow', n: 'Travesseiro'} },
            { c: {i: 'fa-lightbulb', n: 'Lâmpada'}, i: {i: 'fa-plug', n: 'Tomada'} },
            
            // Esportes / Lazer
            { c: {i: 'fa-futbol', n: 'Futebol'}, i: {i: 'fa-basketball', n: 'Basquete'} },
            { c: {i: 'fa-gamepad', n: 'Videogame'}, i: {i: 'fa-dice', n: 'Dados'} },
            { c: {i: 'fa-guitar', n: 'Violão'}, i: {i: 'fa-drum', n: 'Tambor'} },
            { c: {i: 'fa-camera', n: 'Câmera'}, i: {i: 'fa-video', n: 'Filmadora'} },
            
            // Profissões / Pessoas
            { c: {i: 'fa-user-doctor', n: 'Médico'}, i: {i: 'fa-user-nurse', n: 'Enfermeiro'} },
            { c: {i: 'fa-user-graduate', n: 'Estudante'}, i: {i: 'fa-school', n: 'Escola'} },
            { c: {i: 'fa-user-astronaut', n: 'Astronauta'}, i: {i: 'fa-rocket', n: 'Foguete'} },
            { c: {i: 'fa-crown', n: 'Rei'}, i: {i: 'fa-chess-king', n: 'Rei (Xadrez)'} },
            
            // Aleatórios
            { c: {i: 'fa-ghost', n: 'Fantasma'}, i: {i: 'fa-skull', n: 'Caveira'} },
            { c: {i: 'fa-gift', n: 'Presente'}, i: {i: 'fa-box', n: 'Caixa'} },
            { c: {i: 'fa-heart', n: 'Coração'}, i: {i: 'fa-heart-crack', n: 'Coração Partido'} },
            { c: {i: 'fa-money-bill', n: 'Dinheiro'}, i: {i: 'fa-credit-card', n: 'Cartão'} },
        ];

        // --- ESTADO DO JOGO ---
        let state = {
            totalPlayers: 5,
            impostors: 1,
            detectives: 0,
            players: [], // Array de objetos {role, icon, name}
            currentPlayerIndex: 0,
            usedPairs: [] // Para evitar repetição na sessão
        };

        // --- MANIPULAÇÃO DO DOM (CONFIGURAÇÃO) ---
        const totalPlayersInput = document.getElementById('totalPlayers');
        const chaosModeInput = document.getElementById('chaosMode');
        const hasDetectiveInput = document.getElementById('hasDetective');
        const manualControls = document.getElementById('manual-controls');

        totalPlayersInput.addEventListener('input', (e) => {
            state.totalPlayers = parseInt(e.target.value);
            document.getElementById('totalPlayersVal').innerText = state.totalPlayers;
            validateCounts();
        });

        chaosModeInput.addEventListener('change', (e) => {
            if(e.target.checked) {
                manualControls.style.opacity = '0.3';
                manualControls.style.pointerEvents = 'none';
            } else {
                manualControls.style.opacity = '1';
                manualControls.style.pointerEvents = 'all';
            }
        });

        function toggleDetectiveInput() {
            const controls = document.getElementById('detective-control');
            if(hasDetectiveInput.checked) {
                controls.style.opacity = '1';
                controls.style.pointerEvents = 'all';
                state.detectives = 1;
            } else {
                controls.style.opacity = '0.5';
                controls.style.pointerEvents = 'none';
                state.detectives = 0;
            }
            document.getElementById('detectivesVal').innerText = state.detectives;
            validateCounts();
        }

        function adjustCount(type, delta) {
            const maxSpecials = Math.floor(state.totalPlayers / 3);
            
            if (type === 'impostors') {
                let newVal = state.impostors + delta;
                if (newVal < 1) newVal = 1; // Mínimo 1 impostor
                // Validação Regra 3/1
                if (newVal + state.detectives <= maxSpecials) {
                    state.impostors = newVal;
                }
            } else if (type === 'detectives') {
                let newVal = state.detectives + delta;
                if (newVal < 0) newVal = 0;
                if (newVal + state.impostors <= maxSpecials) {
                    state.detectives = newVal;
                }
            }
            
            document.getElementById('impostorsVal').innerText = state.impostors;
            document.getElementById('detectivesVal').innerText = state.detectives;
            validateCounts();
        }

        function validateCounts() {
            const maxSpecials = Math.floor(state.totalPlayers / 3);
            document.getElementById('rule-msg').innerText = `Máx. Especiais (Imp+Det): ${maxSpecials}`;
            
            // Correção automática se o número de jogadores diminuir
            if (!chaosModeInput.checked) {
                if (state.impostors + state.detectives > maxSpecials) {
                    // Reseta para padrão seguro
                    state.detectives = 0;
                    state.impostors = Math.max(1, maxSpecials); 
                    if(state.impostors > maxSpecials) state.impostors = 1; // Caso jogadores < 3 (embora min seja 3)
                    
                    document.getElementById('impostorsVal').innerText = state.impostors;
                    document.getElementById('detectivesVal').innerText = state.detectives;
                    if(hasDetectiveInput.checked) {
                        // Se tinha detetive mas não cabe mais, mantém marcado mas zero, ou ajusta impostor
                        // Simplesmente ajustamos os valores visuais
                    }
                }
            }
        }
        // --- LÓGICA DO JOGO ---

        function getUniqueIconPair() {
            // Se já usamos todos, reseta
            if (state.usedPairs.length >= iconPairs.length) {
                state.usedPairs = [];
            }
            
            let pair;
            let index;
            do {
                index = Math.floor(Math.random() * iconPairs.length);
            } while (state.usedPairs.includes(index));

            state.usedPairs.push(index);
            return iconPairs[index];
        }

        function startGame() {
            const maxSpecials = Math.floor(state.totalPlayers / 3);
            
            let numImpostors = state.impostors;
            let numDetectives = state.detectives;

            // Modo Caos
            if (chaosModeInput.checked) {
                // Aleatório respeitando o limite
                // Mínimo 1 impostor
                // Resto pode ser detetive ou nada
                
                // Ex: 9 jogadores -> max 3 especiais.
                // Impostor: rand(1, 3). Digamos 2.
                // Detetive: rand(0, 3-2). Digamos 1.
                
                // Se maxSpecials for 0 (menos de 3 players - não deve ocorrer pelo input), força 1 imp
                const limit = Math.max(1, maxSpecials);
                
                numImpostors = Math.floor(Math.random() * limit) + 1; // 1 a limit
                
                // Se o usuário permitiu detetives no caos (vamos assumir que a checkbox detetive conta)
                // Ou vamos sempre permitir no caos? O prompt diz "quantidade de impostores e detetives aleatórios".
                // Vamos assumir que pode ter detetive no caos sempre.
                const remaining = limit - numImpostors;
                numDetectives = remaining > 0 ? Math.floor(Math.random() * (remaining + 1)) : 0;
            }

            // Gera Array de Roles
            let roles = [];
            for(let i=0; i<numImpostors; i++) roles.push('impostor');
            for(let i=0; i<numDetectives; i++) roles.push('detective');
            while(roles.length < state.totalPlayers) roles.push('civilian');

            // Embaralha (Fisher-Yates)
            for (let i = roles.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [roles[i], roles[j]] = [roles[j], roles[i]];
            }

            // Seleciona Ícones
            const currentPair = getUniqueIconPair();
            const impostorKnows = document.getElementById('impostorKnows').checked;

            // Monta dados dos jogadores
            state.players = roles.map(role => {
                let iconClass = '';
                let iconName = '';
                let displayName = '';
                let colorClass = '';

                if (role === 'civilian') {
                    iconClass = currentPair.c.i;
                    iconName = currentPair.c.n;
                    displayName = 'CIVIL';
                    colorClass = 'civilian-color';
                } else if (role === 'detective') {
                    iconClass = 'fa-user-secret'; // Ícone genérico ou nenhum
                    iconName = '???';
                    displayName = 'DETETIVE';
                    colorClass = 'detective-color';
                } else if (role === 'impostor') {
                    // Se sabe: vê ícone impostor e nome Impostor.
                    // Se não sabe: vê ícone impostor mas nome Civil.
                    iconClass = currentPair.i.i;
                    iconName = currentPair.i.n; // Nome do objeto real dele
                    
                    if (impostorKnows) {
                        displayName = 'IMPOSTOR';
                        colorClass = 'impostor-color';
                    } else {
                        // O "Truque": Ele acha que é civil
                        displayName = 'CIVIL'; 
                        colorClass = 'civilian-color'; 
                        // Nota: Ele recebe a imagem da estrela, mas dizemos "Civil". 
                        // Se ele descrever "Tenho uma estrela" e os civis "Tenho um sol", ele é pego.
                    }
                }

                return {
                    role: role, // role real
                    icon: iconClass,
                    itemName: iconName,
                    displayRole: displayName,
                    color: colorClass
                };
            });

            state.currentPlayerIndex = 0;
            
            // Troca Tela
            document.getElementById('screen-setup').classList.remove('active');
            document.getElementById('screen-game').classList.add('active');
            updateGameScreen();
        }

        function updateGameScreen() {
            const pIndex = state.currentPlayerIndex + 1;
            document.getElementById('round-indicator').innerText = `Jogador ${pIndex} de ${state.totalPlayers}`;
            document.getElementById('current-player-name').innerText = `Jogador ${pIndex}`;
            
            // Reseta visualização
            document.getElementById('view-hidden').style.display = 'flex';
            document.getElementById('view-revealed').style.display = 'none';
        }

        function revealCard() {
            const player = state.players[state.currentPlayerIndex];
            
            const iconContainer = document.getElementById('role-icon');
            const roleName = document.getElementById('role-name');
            const itemName = document.getElementById('item-name');

            // Limpa classes anteriores
            iconContainer.className = 'icon-display fa-solid';
            roleName.className = 'role-text';

            if (player.role === 'detective') {
                // Detetive não recebe imagem nem dica
                iconContainer.classList.add('fa-magnifying-glass');
                iconContainer.style.color = '#FFA500';
                roleName.innerText = "VOCÊ É O DETETIVE";
                roleName.classList.add(player.color);
                itemName.innerText = "Descubra a palavra secreta ouvindo os outros.";
            } else {
                // Civil ou Impostor
                iconContainer.classList.add(player.icon);
                // Cor baseada no que ele DEVE ver
                if (player.displayRole === 'IMPOSTOR') {
                    iconContainer.style.color = 'var(--secondary)';
                } else {
                    iconContainer.style.color = 'var(--accent)';
                }
                
                roleName.innerText = player.displayRole;
                roleName.classList.add(player.color);
                itemName.innerText = player.itemName;
            }

            document.getElementById('view-hidden').style.display = 'none';
            document.getElementById('view-revealed').style.display = 'flex';
        }

        function hideCard() {
            state.currentPlayerIndex++;
            if (state.currentPlayerIndex >= state.totalPlayers) {
                // Fim da rodada de revelação
                document.getElementById('screen-game').classList.remove('active');
                document.getElementById('screen-result').classList.add('active');
            } else {
                updateGameScreen();
            }
        }

        function returnToMenu() {
            document.getElementById('screen-result').classList.remove('active');
            document.getElementById('screen-setup').classList.add('active');
        }

        // Inicialização
        validateCounts();

    </script>
</body>
</html>